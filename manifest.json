{
    "manifest_version": 3,
    "version": "1.0",
    "default_locale": "en",
    "permissions": ["storage"],

    "name": "__MSG_name__",
    "description": "__MSG_description__",

    "host_permissions": ["*://open.spotify.com/*"],
    "content_scripts": [
        {
            "matches": ["*://open.spotify.com/*"],
            "js": ["content/content.js"],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html"  
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "icons": {
        "16": "icons/neutral/16x16.png",
        "32": "icons/neutral/32x32.png",
        "48": "icons/neutral/48x48.png",
        "128": "icons/neutral/128x128.png"
    }
}